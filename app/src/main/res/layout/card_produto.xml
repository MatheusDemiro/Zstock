<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="@color/cloudGrey"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgProduto"
            android:layout_width="100dp"
            android:layout_height="121dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_produtos" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_alignStart="@+id/tvCardViewQuantidadeEstoque"
            android:layout_alignTop="@+id/imgProduto"
            android:text="Nome" />

        <TextView
            android:id="@+id/tvCardViewPrecoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/imgProduto"
            android:text="Preco" />

        <TextView
            android:id="@+id/tvCardViewQuantidadeEstoque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCardViewPrecoProduto"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/imgProduto"
            android:text="Quantidade" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProduto"
            android:layout_below="@id/tvCardViewQuantidadeEstoque"
            android:layout_marginTop="15dp"
            android:text="Nome da empresa" />

    </RelativeLayout>
</android.support.v7.widget.CardView>