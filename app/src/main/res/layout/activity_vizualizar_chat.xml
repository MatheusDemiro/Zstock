<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".negociacao.gui.VizualizarChatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvNegociacaoNome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:layout_marginStart="25dp"
            android:text="Chat da compra"
            android:textSize="25sp"
            android:textAllCaps="true"
            android:layout_marginLeft="25dp" />

        <View
            android:id="@+id/vwNegociacaoNomeEmpresa"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="25dp"
            android:background="@color/goiaba"
            android:layout_below="@id/tvNegociacaoNome"
            android:layout_marginLeft="25dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/goiaba" />

    <RelativeLayout
        android:id="@+id/rltMensagensDaNegociacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/lvMensagensVizualizacao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="62dp"
            android:dividerHeight="1dp"
            android:divider="@color/jabuticaba"
            android:foregroundTint="@color/goiaba"/>
    </RelativeLayout>
</LinearLayout>