<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewNegociacao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="1dp"
    android:layout_marginStart="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="5dp"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="@color/cloudGrey"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:id="@+id/negociacaoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNomeCpfCardViewNegocicao"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTextoDataInicioCardViewNegociacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvDataFimCardViewNegociacao"
            android:text="@string/zs_texto_data_inicio_negociacao"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDataInicioCardViewNegociacao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvNomeCpfCardViewNegocicao"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/tvTextoDataInicioCardViewNegociacao"
            android:layout_toRightOf="@+id/tvTextoDataInicioCardViewNegociacao"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvDataFimCardViewNegociacao"
            android:layout_alignBottom="@+id/tvDataFimCardViewNegociacao"
            android:text="@string/zs_texto_data_fim_negociacao"
            android:textStyle="bold"
            android:id="@+id/textView2" />

        <TextView
            android:id="@+id/tvDataFimCardViewNegociacao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvDataInicioCardViewNegociacao"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_left" />

    </RelativeLayout>
</android.support.v7.widget.CardView>